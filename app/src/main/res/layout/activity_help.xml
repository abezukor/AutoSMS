<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Help"
        android:textSize="50sp"
        android:id="@+id/tophelp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create AutoSMS:"
        android:id="@+id/creattext"
        android:layout_below="@+id/tophelp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="To create an AutoSMS first tap a Add Auto SMS"
        android:id="@+id/createbeg"
        android:layout_below="@+id/creattext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="180sp"
        android:layout_height="320sp"
        android:id="@+id/addbtnimg"
        android:src="@drawable/addbtn"
        android:layout_below="@+id/createbeg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/entertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/addbtnimg"
            android:text="Then enter the number you want to sent the text to, the message you want texted, and the name of the shortcut on your home screen. You can also tap the pick contact button to pick a contact for the AutoSMS to go to."
            android:textAppearance="?android:attr/textAppearanceMedium" />
    <ImageView
        android:layout_width="180sp"
        android:layout_height="320sp"
        android:id="@+id/textenterimg"
        android:src="@drawable/enterintofields"
        android:layout_below="@+id/entertxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Then click The save button."
        android:id="@+id/savetxt"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textenterimg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Now there should be a dynamic shortcut under AutoSMS. To access it, tap and hold on the AutoSMS icon."
            android:id="@+id/shortcuttxt"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/savetxt"/>

        <ImageView
            android:layout_width="180sp"
            android:layout_height="320sp"
            android:id="@+id/Dynamicshotcut"
            android:src="@drawable/dynamicshortcut"
            android:layout_below="@+id/shortcuttxt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="If you would like to make the shortcut a separate icon, drag it out of the box above the AutoSMS app."
            android:id="@+id/PinnedShortCutTxt"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Dynamicshotcut"/>
        <ImageView
            android:layout_width="180sp"
            android:layout_height="320sp"
            android:id="@+id/PinnedShortCutIMG"
            android:src="@drawable/pinnedshortcut"
            android:layout_below="@+id/PinnedShortCutTxt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>